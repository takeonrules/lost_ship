#!/usr/bin/env ruby
require "bundler/setup"
require "dry/cli"
require "readline"

module LostShip
  module CLI
    module Commands
      extend Dry::CLI::Registry

      class Start < Dry::CLI::Command
        require "lost_ship/models/fleet"
        desc "Start a game of W.M. Akers' “Lost Ship”"
        def call(*)
          puts "Starting a game of Lost Ship"
          colony_ship_name = ::Readline.readline("Name your Colony ship: ", true)
          puts ""
          puts "Next name your six (6) scout ships:"
          scout_ship_names = (1..6).map do |i|
            ::Readline.readline("\tScout ship #{i}: ", true)
          end
          puts ""
          puts "Next name your six (6) starting pilots:"
          pilot_names = (1..6).map do |i|
            ::Readline.readline("\tPilot #{i}: ", true)
          end
          puts ""
          puts "#{colony_ship_name} (Empathy-class Colony Ship)"
          puts "Scout Ships: #{scout_ship_names.join(', ')}"
          puts "Pilots: #{pilot_names.join(', ')}"

          fleet = Models::Fleet.new(
            ship: { name: colony_ship_name },
            pilots: pilot_names.map { |name| { name: name } },
            scouts: scout_ship_names.map { |name| { name: name }
          )
          require 'byebug'; debugger; true
          fleet
        end
      end

      register "start", Start, aliases: ["s"]
    end
  end
end

Dry::CLI.new(LostShip::CLI::Commands).call
